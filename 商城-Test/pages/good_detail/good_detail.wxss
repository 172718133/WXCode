page{
  padding-bottom: 90rpx;
}
.goods_detail{
  padding: 0 10rpx;
}
.goods_swiper swiper{
  height: 70vw;
  text-align: center;
}
.goods_swiper swiper image{
  margin: 20rpx 0;
  width: 60%;
}

/*  */
.goods_price{
  color: rgb(231, 35, 35);
  font-size: 34rpx;
  font-weight: bold;
  margin: 20rpx 40rpx;
}
.goods_main{
  display: flex;
  border-top: #dedede 5rpx solid;
  border-bottom: #dedede 5rpx solid;
  padding: 30rpx 0;
}
.goods_name{
  flex: 7;
  color: #686363;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-left: 15rpx;
}
.goods_collect{
  flex: 2;
  text-align: center;
}
.txt{
  font-size: 28rpx;
  color: #312f2f;
}
.goods_info_title{
  font-size: 36rpx;
  font-weight: 600;
  padding: 20rpx;
  color: var(--themeColor);
}
/* tool */
.goods_tool{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.tool_item{
  border-top: 2rpx solid #ccc;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.btn_cart{
  flex: 2;
  background-color: rgb(255, 164, 0);
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
.btn_buy{
  flex: 2;
  background-color: rgb(248, 85, 77);
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
.tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100%;
  opacity: 0;
}
.icon-shoucang1{
  color: rgb(219, 20, 20);
}